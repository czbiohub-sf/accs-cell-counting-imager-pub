#:kivy 1.11.1
<CCIGui>:

    orientation: 'vertical'

    BoxLayout: #Top Half
        id:TopHalf
        orientation: 'horizontal'
        size_hint_y: .7

        BoxLayout:
            id:CameraControls
            orientation:'vertical'
            size_hint_x:.15

            BoxLayout: #Arrows go here
                id:Arrows
                orientation:'vertical'
                padding: [15.0,15.0,15.0,15.0]

                Button:
                    id:Up
                    text: "Up"
                    on_press: print("Move Up")

                Button:
                    id:Down
                    text: "Down"
                    on_press: print("Move Down")



            BoxLayout:
                id:HomeStepsizeCapture
                orientation: 'vertical'
                padding: [15.0,15.0,15.0,15.0]
                Button:
                    id:Home
                    text:"Initialize"
                    on_press: root.initializeCB()
                Spinner:
                    id:Stepsize
                    text:'Step Size'
                    values:'Option 1', 'Option 2', 'Option 3'
                    on_text: root.StepSizeCB(self.text)
                Button:
                    id:preview
                    text:"Preview"
                    on_press: root.previewCB()
                Button:
                    id:StopPreview
                    text: "Stop Preview"
                    on_press: root.stopPreviewCB()

        Label: #Spot for Camera Preview
            id:CameraPreview
            size_hint_x:.85
            text:"preview window"
    #
    BoxLayout: #Bottom Half

        id:BottomHalf
        orientation: 'vertical'
        size_hint_y:.3
        padding: [15.0,15.0,15.0,15.0]

        BoxLayout: #wells

            id:Wells
            orientation: 'horizontal'
            WellButton:
                group: 'wells'
                id:One
                text: "1"
                on_press: root.wellCB()

            WellButton:
                group: 'wells'
                id:Two
                text: "2"
                on_press: root.wellCB()

            WellButton:
                group: 'wells'
                id:Three
                text: "3"
                on_press: root.wellCB()

            WellButton:
                group: 'wells'
                id:Four
                text: "4"
                on_press: root.wellCB()

            WellButton:
                group: 'wells'
                id:Five
                text: "5"
                on_press: root.wellCB()

            WellButton:
                group: 'wells'
                id:Six
                text: "6"
                on_press: root.wellCB()

            WellButton:
                group: 'wells'
                id:Seven
                text: "7"
                on_press: root.wellCB()

            WellButton:
                group: 'wells'
                id:Eight
                text: "8"
                on_press: root.wellCB()



        BoxLayout:
            id:SetAndClear
            orientation: 'horizontal'


            Button:
                id:Set
                text: "Set"
                on_press: print("Set new location for this button")
            Button:
                id:Stop
                text: "Triggered Scan"
                on_press: root.triggeredScanCB()
            Button:
                text: "Direct Scan"
                on_press:root.directScanCB()
            Button:
                id:StopScan
                text: "Stop Scan"
                on_press: root.stopScanCB()
            Button:
                id:CreateServer
                text: "Create Server"
                on_press: root.createServerCB()


        Spinner:
            text:'Status'
            values:'Category 1', 'Category 2', 'Category 3'




<WellButton>:
    font_size: 25
    background_color: (1.0, 0.0, 0.0, 1.0)
